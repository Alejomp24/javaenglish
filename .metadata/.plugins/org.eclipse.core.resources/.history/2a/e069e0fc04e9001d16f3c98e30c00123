package com.perezcasallas;

public class SimpleInterestCalculator {
	double totalSum;
	private String principal;
	private String interest;
	
	// Constructor
	public SimpleInterestCalculator(String principal, String interest) {
		BigDecimal principal = new BigDecimal(principal);
		BigDecimal interest = new BigDecimal(interest);
	}

	public double calculateTotalValue(int noOfYears) {
		// Total Amount = principal + principal * interest * noOfYears;
		return totalSum = principal + principal * interest * noOfYears;
	}

}
